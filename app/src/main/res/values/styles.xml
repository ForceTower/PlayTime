<resources>
    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#6200EE</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#3700B3</item>
        <item name="colorSecondary">#03DAC5</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="colorTertiary">#1FAEEF</item>

        <item name="colorSurface">#FFFFFF</item>

        <item name="fontFamily">@font/product_sans_regular</item>

        <item name="colorOnMovieFeatured">#FFFFFF</item>
        <item name="movieFeaturedOverlay">@color/movieFeaturedOverlay</item>
    </style>

    <style name="PlayTime" parent="BaseTheme" />

    <style name="PlayTime.Home">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">@bool/not_on_night_mode</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="PlayTime.TextAppearance.TabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.PlayTime" parent="@android:style/Widget" />

    <style name="Widget.PlayTime.DayIndicatorDecoration">
        <item name="android:color">?attr/colorPrimary</item>
        <item name="insetVertical">8dp</item>
    </style>

    <style name="Widget.PlayTime.ReleaseMonthSeparatorItemDecoration">
        <item name="android:width">300dp</item>
        <item name="android:height">72dp</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="verticalBias">0.67</item>
    </style>

    <style name="TextAppearance.PlayTime.Thing" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>